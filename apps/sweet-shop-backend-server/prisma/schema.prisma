datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Sweet {
  category  String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  price     Float?
  quantity  Int?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt    DateTime @default(now())
  email        String?  @unique
  firstName    String?
  id           String   @id @default(cuid())
  lastName     String?
  password     String
  passwordHash String?
  role         String?
  roles        Json
  updatedAt    DateTime @updatedAt
  username     String   @unique
}
